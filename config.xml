<?xml version="1.0" encoding="UTF-8" ?>
    <widget
        version     = "1.0.0" >
    <name>BOLT</name>

    <description>
        B - Bandwidth 
        O - Of 
        L - Live 
        T - Traffic
    </description>
    <author email="chaitugoli@gmail.com">
        Chait Goli
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.0" />
    <preference name="SplashScreen" value="screen"/>
    <icon src="bolt.png" platform="android" qualifier="ldpi" />
    <icon src="bolt.png" platform="android" qualifier="mdpi" />
    <icon src="bolt.png" platform="android" qualifier="hdpi" />
    <icon src="bolt.png" platform="android" qualifier="xhdpi" />
    <icon src="bolt.png" platform="android" qualifier="xxhdpi" />
    <icon src="bolt.png" platform="android" qualifier="fr-xxhdpi" />

    <splash src="splash.png" platform="android" qualifier="ldpi" />
    <splash src="splash.png" platform="android" qualifier="mdpi" />
    <splash src="splash.png" platform="android" qualifier="hdpi" />
    <splash src="splash.png" platform="android" qualifier="xhdpi" />
    <splash src="splash.png" platform="android" qualifier="fr-xhdpi" />
    <splash src="splash.png" platform="android" qualifier="port-xxhdpi" />
    <splash src="splash.png" platform="android" qualifier="land-xxhdpi" />

</widget>
